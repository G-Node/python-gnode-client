    "apiDefinition": "./requirements.json",

    "cacheDir": "./cache/",
    "cache_file_name": "gnode_cache.h5",
    "load_cached_data" : 1,
    "tempDir": "/tmp/",

    "odml_repository": "http://portal.g-node.org/odml/terminologies/v1.0/terminologies.xml",

    "db": "",

    "max_line_out": 40,
